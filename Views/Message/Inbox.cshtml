@{
Html.RenderPartial("../Shared/_Header.cshtml");
}
<div class="container mt-3">
    <div class="row">
        <div class="col-3">
            <partial name="../Shared/_Navigation.cshtml" />
        </div>
        <div class="col-9">
            <div class="row text-white bg-dark email-list">
                <div class="col-3">
                    Người gửi
                </div>
                <div class="col-3">
                    Tiêu đề
                </div>
                <div class="col-6">
                    Nội dung
                </div>
            </div>
            @foreach(var item in ViewBag.listInbox)
            {
            <div>
                <a class="card-link email-hover">
                    <div class="row email-list">
                        <div class="col-3  text-truncate">
                           <b> @item.ListReceiver</b>
                        </div>
                        <div class="col-3  text-truncate">
                            @item.Title
                        </div>
                        <div class="col-5  text-truncate">
                            @item.Content
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                </a>
            </div>
            }
        </div>
    </div>
</div>