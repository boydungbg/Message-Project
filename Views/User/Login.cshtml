<div class="container">
    <div class="row justify-content-center align-items-center" style="height:100vh">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <form method="POST" action="/User/Dologin">
                        <div class="text-center">
                            <h1>Login</h1>
                            @if(@ViewBag.error == true)
                            {
                            <p style="color:red">Tài khoản hoặc mật khẩu không đúng</p>
                            }
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="name" class="form-control" placeholder="Username" required="required">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="pass" class="form-control" placeholder="Password" required="required">
                        </div>
                        <button class="btn btn-success">Log in</button>
                        <p style="margin:13px 3px;">If you do not have an account? <a href="/User/Register"> Sign Up.</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>